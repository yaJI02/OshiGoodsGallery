<%= link_to post, class:'nav-link' do %>
  <div class='form-box'>
    <div class='post-type-tag px-2'>
      <div class='row'>
        <div class='col-md'>
          <%= post.post_type_i18n %>
        </div>
        <div class='col-md d-flex justify-content-end'>
          <%= I18n.l(post.created_at, format: :only_date) %>
        </div>
      </div>
    </div>
    <div class='text-center swiper-image-container'>
      <%= image_tag post.photo.url %>
    </div>
    <div class='text-center'>
      <%= post.title %>
    </div>

    <% if rank != 'none' %>
      <div class='text-center top-rank'>
        <div class='mt-3 mb-1'>第 <%= rank %> 位</div>
        <div class='mb-3'><%= post.stamp_count('nice') %> いいね</div>
      </div>
    <% end %>

    <%= link_to profile_path(post.user.profile), class:'nav-link mb-2 me-2' do %>
      <div class='row'>
        <div class='col-lg-10 text-end my-auto'>
          by <%= post.user.name %>
        </div>
        <div class='col-lg-2 d-flex justify-content-center'>
          <%= image_tag(post.user.profile.avatar.url, class:'rounded-circle', size:'30x30', style:'border: 1px solid #66589c;') %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
