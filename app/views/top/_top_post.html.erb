<%= link_to post, class:'nav-link' do %>
  <div class='form-box'>
    <div class='post-type-tag px-2'>
      <div class='row'>
        <div class='col-md'>
          <%= post.post_type_i18n %>
        </div>
        <div class='col-md d-flex justify-content-end'>
          <%= I18n.l(post.created_at, format: :only_date) %>
        </div>
      </div>
    </div>
    <div class='text-center swiper-image-container'>
      <%= image_tag post.photo.url %>
    </div>
    <div class='text-center'>
      <%= post.title %>
    </div>

    <%= link_to profile_path(post.user.profile), class:'nav-link mb-2' do %>
      <div class='row'>
        <div class='col-10 text-end my-auto'>
          <%= t('posts.user_link_sentense') %><%= post.user.name %>
        </div>
        <div class='col-2' style='padding-left: 0;'>
          <%= image_tag(post.user.profile.avatar.url, class:'rounded-circle', size:'30x30', style:'border: 1px solid #66589c;') %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
