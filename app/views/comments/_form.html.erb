<%= form_with model: comment, url: to_url do |f| %>
  <div class='mt-1 mx-3'>
    <%= render 'shared/error_message', object: f.object %>
  </div>
  <div class='form-group mt-4 mx-3'>
    <%= f.text_area :body, rows: 3, class: 'form-control' %>
  </div>

  <div class='text-center'>
    <%= f.submit class: 'btn my-3 mx-auto form-btn' %>
  </div>
<% end %>
