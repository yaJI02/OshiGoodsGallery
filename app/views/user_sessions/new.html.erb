<% content_for :title, t('.title') %>
<style>
body{background-color: white;}
</style>

<div class="container">
  <div class="row">
    <div class='login-box col-md-10 col-lg-8 mx-auto'>
      <div class='page-title-name text-center my-5'>
        <h1><%= t('.title') %></h1>
      </div>
      <%= form_with url:login_path do |f| %>
        <div class='form-group row my-4'>
          <div class='col-3 text-center'>
            <%= f.label :email, class: 'col-form-label' %>
          </div>
          <div class='col-9'>
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
        <div class='form-group row my-4'>
          <div class='col-3 text-center'>
            <%= f.label :password, class: 'col-form-label' %>
          </div>
          <div class='col-9'>
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class="text-center">
          <%= f.submit class: "btn my-3 mx-auto form-btn" %>
        </div>
      <% end %>
    </div>
    <div class='link-text text-center mt-5'>
      <%= link_to t('.link_signup'), new_user_path %>
    </div>
  </div>
</div>