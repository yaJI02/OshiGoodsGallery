<% content_for :title, t('.title') %>
<style>
body{background-color: white;}
</style>

<div class='container'>
  <div class='row'>
    <div class='login-box col-md-10 col-lg-8 mx-auto mt-5 px-5'>
      <div class='page-title-name text-center my-5'>
        <h1><%= t('.title') %></h1>
      </div>
      <%= form_with model: @contact, local: true do |f| %>
        <%= render 'shared/error_message', object: f.object %>
        <div class='form-group row my-4'>
          <div class='col-3 text-center'>
            <%= f.label :name, class: 'col-form-label' %>
          </div>
          <div class='col-9'>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class='form-group row my-4'>
          <div class='col-3 text-center'>
            <%= f.label :email, class: 'col-form-label' %>
          </div>
          <div class='col-9'>
            <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレスを入力' %> 
          </div>
          <div class='col-3 text-center'>
            <%= f.label :email_confirmation, class: 'col-form-label' %>
          </div>
          <div class='col-9'>
            <%= f.email_field :email_confirmation, class: 'form-control', placeholder: 'メールアドレスを再入力' %> 
          </div>
        </div>
        <div class='form-group row my-4'>
          <div class='col-3 text-center'>
            <%= f.label :subject, class: 'col-form-label' %>
          </div>
          <div class='col-9'>
            <%= f.select :subject, Contact.subjects.keys.map {|k| [t("enums.contact.subject.#{k}"), k]}, class: 'form-control' %>
          </div>
        </div>
        <div class='form-group row my-4'>
          <div class='col-3 text-center'>
            <%= f.label :message, class: 'col-form-label' %>
          </div>
          <div class='col-9'>
            <%= f.text_area :message, rows: 10, class: 'form-control' %>
          </div>
        </div>
        <div class='text-center'>
          <%= f.submit '入力内容を確認する',class: 'btn my-3 mx-auto form-btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>