<div class='form-box mb-3'>
  <div class='post-type-tag px-2'>
    <div class='row'>
      <div class='col-md'>
        <%= post.post_type_i18n %>
      </div>
      <div class='col-md d-flex justify-content-end'>
        created at <%= I18n.l(post.created_at, format: :only_date) %>
      </div>
    </div>
  </div>
  <div class='row m-1'>
    <div class='col-md-4'>
      <%= link_to image_tag(post.photo.url, class:'thumb'), post %>
    </div>
    <div class='col-md-8'>
      <div class='mb-1'>
        <%= post.title %>
      </div>
      <div class='content-box mb-1'>
        <% if post.tags.merchandise_tag.present? %>
          <% post.tags.merchandise_tag.each do |tag| %>
            <%= tag.name %>
          <% end %>
        <% else %>
          <div class='no-data'>グッズカテゴリ</div>
        <% end %>
      </div>
      <div class='content-box mb-1'>
        <% if post.tags.content_tag.present? %>
          <% post.tags.content_tag.each do |tag| %>
            <%= tag.name %>
          <% end %>
        <% else %>
          <div class='no-data'>コンテンツカテゴリ</div>
        <% end %>
      </div>
      <div class='content-box mb-1'>
        <% if post.post_stamps.where(user_id: post.user).present? %>
          <% post.post_stamps.where(user_id: post.user).each do |stamp| %>
            <%= stamp.stamp_i18n %>
          <% end %>
        <% else %>
          <div class='no-data'>推しポイント</div>
        <% end %>
      </div>
    </div>
  </div>

  <div class='row m-2'>
    <div class='col-md-6'>
      <%= link_to "詳細を見る", post %>
    </div>
    <div class='col-md-6'>
      <%= link_to profile_path(post.user.profile), class:'nav-link' do %>
        <div class='row'>
          <div class='col-11 text-end my-auto'>
            <%= t('posts.user_link_sentense') %><%= post.user.name %>
          </div>
          <div class='col-1' style='padding-left: 0;'>
            <%= image_tag(post.user.profile.avatar.url, class:'rounded-circle', size:'30x30', style:'border: 1px solid #66589c;') %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
