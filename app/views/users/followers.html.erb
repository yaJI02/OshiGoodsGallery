<% content_for :title, t('.title', name: @user.name) %>

<div class='container'>
  <%= render 'shared/content_title', this_title: t('.title', name: @user.name) %>
  <div class='my-list mt-5'>
    <div class='row text-center'>
      <%= link_to follows_user_path(@user), class: 'me-2 col my-page-selecter not-select nav-link', 'data-turbo' => 'false' do %>
        <div class='my-page-selecter-text'>フォロー</div>
      <% end %>
      <div class='ms-2 col my-page-selecter'>
        <div class='my-page-selecter-text'>フォロワー</div>
      </div>
    </div>
    <div class='mb-3 my-list-box'>
      <div class='m-3'>
        <% if @follow_users.present? %>
          <% @follow_users.each do |user| %>
            <%= render 'user', user: user, follow_type: 'followerd' %>
          <% end %>
          <div class='text-center page-info'>
            <%= page_entries_info @follow_users %>
          </div>
          <div class='d-flex justify-content-center'>
            <%= paginate @follow_users, theme: 'bootstrap-5' %>
          </div>
        <% else %>
          <div class='no-data text-center mb-3'>フォロワーがいません</div>
        <% end %>
      </div>
    </div>
  </div>
</div>