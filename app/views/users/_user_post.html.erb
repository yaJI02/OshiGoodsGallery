<div class='form-box mb-3'>
  <div class='post-type-tag ps-2'>
    <%= post.post_type_i18n %>
  </div>
  <div class='row m-1'>
    <div class='col-md-3'>
      <%= image_tag post.photo.url, class:'thumb' %>
    </div>
    <div class='col-md-9'>
      <div class='mt-1 mb-4'>
        <%= post.title %>
      </div>
      <div class='mt-2 mb-3'>
        <span><%= Post.human_attribute_name(:place) %>：</span>
        <% if post.places.present? %>
          <% post.places.each do |place| %>
            <%= link_to place.name, { controller: "posts", action: "index", q: { places_name_eq: place.name }}, class: 'tag tag-place' %>
          <% end %>
        <% else %>
          <span class='no-data'>購入場所未登録</span>
        <% end %>
      </div>
      <div class='my-2'>
        <span><%= Post.human_attribute_name(:merchandise_tag) %>：</span>
        <% if post.tags.merchandise_tag.present? %>
          <% post.tags.merchandise_tag.each do |tag| %>
            <%= link_to tag.name, { controller: "posts", action: "index", q: { tags_name_eq: tag.name }}, class: 'tag' %>
          <% end %>
        <% else %>
          <span class='no-data'>グッズカテゴリ未登録</span>
        <% end %>
      </div>
      <div class='mt-2 mb-3'>
        <span><%= Post.human_attribute_name(:content_tag) %>：</span>
        <% if post.tags.content_tag.present? %>
          <% post.tags.content_tag.each do |tag| %>
            <%= link_to tag.name, { controller: "posts", action: "index", q: { tags_name_eq: tag.name }}, class: 'tag' %>
          <% end %>
        <% else %>
          <span class='no-data'>コンテンツカテゴリ未登録</span>
        <% end %>
      </div>
      <div>
        <span><%= Post.human_attribute_name(:post_stamp) %>　：</span>
        <% if post.post_stamps.where(user_id: post.user).present? %>
          <% post.post_stamps.where(user_id: post.user).each do |stamp| %>
            <%= link_to stamp.stamp_i18n, { controller: "posts", action: "index", q: { author_stamped_posts: stamp.stamp_before_type_cast }}, class: 'tag tag-stamp' %>
          <% end %>
        <% else %>
          <span class='no-data'>推しポイント未登録</span>
        <% end %>
      </div>
    </div>
  </div>

  <div class='row m-2'>
    <div class='col-md-2'>
      <%= link_to "詳細を見る", post %>
    </div>
    <div class='col-md-8'>
      <div class='d-flex justify-content-center'>
        <% if @mybest_post == post %>
          👑マイベスト投稿👑
        <% else %>
          <%= button_to 'マイベスト登録', my_best_profile_path(post), method: :post, class: 'btn form-btn mybest-btn' %>
        <% end %>
      </div>
    </div>
    <div class='col-md-2 d-flex justify-content-end post-create-at'>
      <%= I18n.l(post.created_at, format: :only_date) %>
    </div>
  </div>
</div>
